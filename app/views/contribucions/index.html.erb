<p id="notice"><%= notice %></p>

<h1>Contribucions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Url</th>
      <th>Text</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contribucions.each do |contribucion| %>
      <tr>
        <td><%= contribucion.user_id %></td>
        <td><%= contribucion.title %></td>
        <td><%= contribucion.url %></td>
        <td><%= contribucion.text %></td>
        <td><%= contribucion.points %></td>
        <td><%= link_to 'UpVote', upvote_contribucion_path(contribucion), method: :put%></td>
        <td><%= link_to 'Show', contribucion %></td>
        <td><%= link_to 'Edit', edit_contribucion_path(contribucion) %></td>
        <td><%= link_to 'Destroy', contribucion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contribucion', new_contribucion_path %>
